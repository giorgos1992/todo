{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "types": [
      "node",
      "jest"
    ],
    "alwaysStrict": true,
    "downlevelIteration": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@utils/*": [
        "./src/utils/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@constants/*": [
        "./src/constants/*"
      ]
    }
  },
  "files": [
    "./custom.d.ts"
  ],
  "include": [
    "src/**/*.ts",
    "**/*.tsx"
  ]
}